<% @order_items.each do |i| %>
  <% item_total = i.product.price * i.quantity %>
  <% @order_total += item_total %>
  <tr>
    <td>
      <%= image_tag i.product.image.tiny %>
    </td>
    <td>
    <h4><%= i.product.name %></h4>
    <br>
      <p><%= i.product.description %></p>
    </td>
  <td>
  <%= i.product.price%>
  </td>
  <td>
  <%= i.quantity %>
  </td>
  <td>
    <%= item_total %>
  </td>
    </tr>
    <% end %>